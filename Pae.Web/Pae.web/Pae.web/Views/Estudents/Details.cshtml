@model Pae.web.Data.Entities.Estudents

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<hr />
<h2>Details: Estudents</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-6">

                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                <Strong>
                                    @Html.DisplayNameFor(model => model.Document)
                                </Strong>

                            </dt>
                            <dd>
                              
                                    @Html.DisplayFor(model => model.Document)
                              

                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.FullName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FullName)
                            </dd>
                        </dl>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                @if (Model.DeliveryActas.Count == 0)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a asp-action="AddDeliveryActa" class="btn btn-primary" asp-route-id="@Model.Id">Add Acta</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">

                                    <a asp-action="AddDeliveryActa" class="btn btn-primary" asp-route-id="@Model.Id">Add Acta Delivery</a>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-responsive table-striped display">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().Id)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().FechaCrea)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().Periodos.MonthDelivery)
                                                    </th>
                                                    <th>
                                                        (#1) Entregado
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().Usucrea)
                                                    </th>
                                                    <th>
                                                        Acciones
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.DeliveryActas)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Id)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FechaCrea)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Periodos.MonthDelivery)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.DetailsDeliveries.Count)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Usucrea)
                                                        </td>
                                                        <td>
                                                            <a asp-action="EditDelivery" class="btn btn-warning" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                                                            <a asp-action="DetailsActa" class="btn btn-info" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"></i></a>
                                                            <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>

                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                }

            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a asp-action="AddDeliveryActa" class="btn btn-primary" asp-route-id="@Model.Id">Add Acta Delivery</a>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialogModal" />
<partial name="_Exepction" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Delete item
            var item_to_delete;
            var action_to_delete;
            $('.display').DataTable();
            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
                action_to_delete = 1;
            });


            $("#btnYesDelete").click(function () {
                window.location.href = '/Estudents/DeleteActa/' + item_to_delete;
            });
        });
    </script>
}










