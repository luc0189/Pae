@model Pae.web.Data.Entities.Estudents

@{
    ViewData["Title"] = "Details";
}
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Details</h2>
                        <h4>Estudents</h4>
                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Document)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Document)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.FullName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FullName)
                            </dd>
                        </dl>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                @if (Model.DeliveryActas.Count == 0)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a asp-action="AddDeliveryActa" class="btn btn-primary" asp-route-id="@Model.Id">Add Acta</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">

                                    <a asp-action="AddDeliveryActa" class="btn btn-primary" asp-route-id="@Model.Id">Add Acta</a>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-responsive table-striped display">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().FechaCrea)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().Periodos.MonthDelivery)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().DetailsDeliveries.Count)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DeliveryActas.FirstOrDefault().Usucrea)
                                                    </th>
                                                    <th>
                                                        Acciones
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.DeliveryActas)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FechaCrea)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Periodos.MonthDelivery)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.DetailsDeliveries.Count)
                                                        </td>
                                                      
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Usucrea)
                                                        </td>
                                                        <td>
                                                            <a asp-action="EditEndowment" class="btn btn-warning" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                                                            <a asp-action="DetailsActa" class="btn btn-info" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"></i></a>

                                                            <button data-id="@item.Id" class="btn btn-danger deleteEndowment" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                }

            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a asp-action="AddDelivery" class="btn btn-primary" asp-route-id="@Model.Id"><i class="glyphicon glyphicon-plus"></i> Add Delivery Acta</a>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>










