                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                   HEY DATA AQUI
                                   

                                </div>
                            </div>





                        </div>
                    </div>

                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    hola
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-responsive table-striped display">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DetailsDeliveries.FirstOrDefault().DocAcudiente)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DetailsDeliveries.FirstOrDefault().FullNameAcudiente)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DetailsDeliveries.FirstOrDefault().SiteDelivery)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.DetailsDeliveries.FirstOrDefault().TelMovil)
                                                    </th>
                                                    <th>
                                                        Img1
                                                    </th>
                                                    <th>
                                                        Acciones
                                                    </th>
                                                </tr>
                                            </thead>
