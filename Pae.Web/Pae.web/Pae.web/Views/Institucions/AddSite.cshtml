@model Pae.web.Models.AddSiteViewModel
@{
    ViewData["Title"] = "Create";
}


<hr />
<form asp-action="AddSite">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Create</h2>
                    <h4>Site</h4>
                </div>
                <div class="panel-body">

                    <input type="hidden" asp-for="InstitucionId" />

                    <div class="form-group">
                        <label class="control-label"></label>
                        <input class="form-control" />
                        <span asp-validation-for="NameSites" class="text-danger"></span>
                    </div>
                    <div class="text-danger">
                        <p>
                            @ViewBag.Message
                        </p>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Details" asp-route-id="@Model.InstitucionId" class="btn btn-success">Back </a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</form>